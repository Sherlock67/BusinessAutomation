
@model CustomerCreate

<h2>Customer Create</h2>

<h4>@ViewBag.SuccessMessage</h4>

<h4>@ViewBag.Data</h4>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
        <span asp-validation-for="Email"></span>
    </div>
  
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
     
</form>